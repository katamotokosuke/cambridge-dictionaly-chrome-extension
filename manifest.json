{
  "manifest_version": 3,
  "name": "Cambridge Dictionary Guinness",
  "description": "Cambridge Dictionary Guinness(CDG) will support you quickly access to dictionary.",
  "icons": {
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "author": {
    "email": "katamotokosuke0605@gmail.com"
  },
  "version": "0.1",
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": [ "images/*" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.js"],
      "css": ["static/popup_in_website.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab", "tabs", "scripting"],
  "action": {}
}